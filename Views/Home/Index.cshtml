@model TodoAspNET.ViewModels.IndexViewModel 
@{
    ViewData["Title"] = "Home Page";
}

@section CSS
{
    <link rel="stylesheet" href="~/css/todo.css" />
}

<div id= "container">
	<h1>To-Do Lists <span id="toggle-form"><i class="fas fa-plus"></i></span></h1>
	
	<form asp-action="Index" method="POST">
		<input asp-for="TarefaToSend.Descricao" maxlength="25" placeholder="Digite aqui" />
	</form>
	
	<ul>
		@foreach (var item in Model.Tarefas)
		{
			<li><span><i class="fas fa-trash"></i></span>@item.Descricao</li>
		}
	</ul>
</div>

